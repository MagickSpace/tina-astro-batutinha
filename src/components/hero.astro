---
import { Image } from 'astro:assets';
import logo from "../assets/escola_turminha_do_batutinha.png";


import { client } from '../../.tina/__generated__/client'

export const response = await client.queries.post({relativePath: "home.md"})
export const imgLogo =  response.data?.post?.imgLogo; 
 export const bgHero =  response.data?.post?.bgHero; 

import { TinaField } from '../components/TinaField'

 
---

<div class="relative overflow-hidden">
  <div class="bg-white mx-auto max-w-7xl">
    <div  class="relative z-10 bg-white pb- sm:pb-16 md:pb-20 lg:w-full lg:max-w-2xl lg:pb-28 xl:pb-32">
        <svg
          class="absolute inset-y-0 right-0 hidden h-full w-48 translate-x-1/2 transform text-white lg:block"
          fill="currentColor"
          viewBox="0 0 100 100"
          preserveAspectRatio="none"
          aria-hidden="true">
          <polygon points="50,0 100,0 50,100 0,100"></polygon>
        </svg>
        <div class="mx-auto max-w-7xl px-4 pb-10 pt-10 sm:px-6 sm:pt-12 md:pt-10 lg:px-8 lg:pt-20">
          <div class="text-center sm:text-left">
            
            <Image src={imgLogo} alt="Escolinha Turminha do Batutinha" width={533} height={266} class="block m-auto" />

            <p
              class="mt-3 text-base text-gray-600 sm:mx-auto sm:mt-5 sm:max-w-xl sm:text-lg md:mt-5 md:text-xl lg:mx-0">
              <TinaField client:tina {...response} myField={'msgboasvinda'}/>
 
             </p>
          
            <!--div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="rounded-md shadow">
              <a
                href="/about"
                class="flex w-full items-center justify-center rounded-md border border-transparent bg-primary px-8 py-3 text-base font-medium text-white hover:bg-secundary dark:bg-purple-300 dark:text-black dark:hover:bg-pink-300 md:px-10 md:py-4 md:text-lg">
                About
              </a>
            </div-->
             
          </div>
        
        </div>
    </div>
  </div>


  <div class="   lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <Image src={bgHero} alt="Escolinha Turminha do Batutinha" width={900} height={1600} class="h-56 w-full object-cover sm:h-72 md:h-96 lg:h-full lg:w-full" />
  </div>
  
</div>
